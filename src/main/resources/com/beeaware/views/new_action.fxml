        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="15.0">
            <children>
                <DatePicker fx:id="actionDatePicker"/>
                <CheckBox fx:id="addingQueen" text="Adding Queen"/>
